{
  "name": "omni-cms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:all": "pnpm --parallel --filter web --filter api dev",
    "build": "pnpm --filter web run build",
    "build:api": "pnpm --filter api run deploy",
    "build:all": "pnpm --filter web run build && pnpm --filter api run deploy",
    "deploy:web": "cd apps/web && pnpm run build:cf",
    "deploy:api": "cd apps/api && pnpm run deploy",
    "deploy:all": "pnpm run build:all",
    "lint": "pnpm --filter web lint",
    "db:migrate": "pnpm --filter api run db:migrate",
    "db:migrate:prod": "pnpm --filter api run db:migrate:prod"
  }
}
