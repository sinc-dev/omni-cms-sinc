{
  "name": "api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm exec wrangler dev",
    "deploy": "pnpm exec wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "npx wrangler d1 migrations apply omni-cms --local",
    "db:migrate:prod": "npx wrangler d1 migrations apply omni-cms",
    "db:seed": "tsx src/lib/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
    "test:performance": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=performance"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@graphql-tools/schema": "^10.0.29",
    "drizzle-orm": "^0.29.1",
    "graphql": "^16.12.0",
    "hono": "^4.10.6",
    "jose": "^5.1.3",
    "nanoid": "^5.0.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@eslint/js": "^9.17.0",
    "@hono/node-server": "^1.12.0",
    "@miniflare/d1": "^2.14.4",
    "@swc/core": "^1.10.0",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "miniflare": "^4.20251118.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5",
    "typescript-eslint": "^8.18.0",
    "wrangler": "^4.50.0"
  }
}
