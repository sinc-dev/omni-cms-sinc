# Cloudflare Account
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# Cloudflare D1 Database
# Database ID is configured in wrangler.toml
# No separate environment variable needed

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=omni-cms-media
R2_PUBLIC_URL=https://media.example.com  # Optional: for custom domain

# Cloudflare Access
CF_ACCESS_TEAM_DOMAIN=your-team.cloudflareaccess.com
CF_ACCESS_AUD=your-access-aud

# Next.js Frontend
NEXT_PUBLIC_APP_URL=http://localhost:3000  # Development
# NEXT_PUBLIC_APP_URL=https://yourdomain.com  # Production

# Hono API Backend URL
# For local development with wrangler dev, use: http://localhost:8787
# For production, use your Cloudflare Workers URL: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8787  # Development
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com  # Production
